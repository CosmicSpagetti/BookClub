<h1>Add New Review</h1>
<%= form_for [@book, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :user %>
  <%= f.text_field :user %><br>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1.0..5.0 %><br>
  <br>
  <%= f.label :comment %>
  <%= f.text_field :comment %><br>
  <br>

  <%= f.submit 'Create Review' %>
<% end %>
