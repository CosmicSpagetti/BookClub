<section class='form' style="color:white; padding: 1%;">
  <h1>Edit Review</h1>
  <%= form_for [@book, @review] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %><br>
    <br>
    <%= f.label :user %>
    <%= f.text_field :user, required: true %><br>
    <br>
    <%= f.label :rating %>
    <%= f.select :rating, 0..5, required: true%><br>
    <br>
    <%= f.label :comment %>
    <%= f.text_field :comment, required: true %><br>
    <br>

    <%= f.submit 'Edit Review' %>
  <% end %>
</section>
