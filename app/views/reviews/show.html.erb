<div class="card-deck">
  <div class="card">
    <%= image_tag @review.book.image, alt: "Cover of #{@review.book.title}", class: "card-img", style: "padding: 25px 25px 25px 25px; height:300px;width:300px;"%>
    <div class="card-body">
      <h5 class="card-title"><%= @review.title %></h5>
      <p class="card-text"><p>Rating: <%= @review.rating.round(1) %></p>
      <p>By: <%= link_to @review.user, user_path(@review.user) %></p>
      <p>Comment: <%= @review.comment %></p>
    </div>
    <div class="card-footer">
      <%= link_to "Delete Review", review_path(@review), method: :delete %><br>
      <%= link_to "Edit Review", edit_review_path(@review) %>
    </div>
  </div>
</div>
