<h1>Edit a Book</h1>
<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :pages %>
  <%= f.text_field :pages %><br>
  <br>
  <%= f.label :published %>
  <%= f.text_field :published %><br>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %><br>
  <br>

  <%= f.submit 'Update Book' %>
<% end %>
